<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="kimxu.me.PM.frag.GMFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/select_radio"
                android:layout_margin="3dp"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:text="当前库存"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/select_radio"
                android:button="@null"
                android:text="款号库存"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:button="@null"
                android:text="库存分布"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:button="@null"
                android:text="货品进销存"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:button="@null"
                android:text="货品查询"/>

            <RadioButton
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/select_radio"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:button="@null"
                android:text="新增货品+"/>

            <RadioButton
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/select_radio"
                android:button="@null"
                android:text="批量调价"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:button="@null"
                android:text="批量操作"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:button="@null"
                android:text="基本设置"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/select_radio"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:button="@null"
                android:text="更多"/>
        </RadioGroup>
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
